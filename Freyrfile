service :sleep do
  group :sleepers

  also_as :short_sleep
  start 'sleep 20'
  # rvm 'ree-1.8.7-2011.03@foobar'

  proc_match /sleep 20/
end

service :sleep2 do
  requires :sleep, :sudosleep
  start 'sleep 20'
  proc_match /sleep 20/
end

service :sudosleep do
  group :sleepers
  start 'sudo sleep 20'
  proc_match /sleep 20/
end
